  <% 1.upto(@x) do |xx| %>
  	<% 1.upto(@y) do |yy| %>
	  <% xpos = (70+15)*(xx-1) %>
	  <% ypos = (70+15)*(yy-1) %>
      .tile.tile-position-<%=xx%>-<%=yy%> {
  		  -webkit-transform: translate(<%=xpos%>px, <%=ypos %>px);
  		  -moz-transform: translate(<%=xpos%>px, <%=ypos %>px);
  		  -ms-transform: translate(<%=xpos%>px, <%=ypos %>px);
  		  transform: translate(<%=xpos%>px, <%=ypos %>px);
	  }
  	<% end %>
  <% end %>
  <% w=70*@x + 15 * (@x + 1) %>
  <% h=70*@y + 15 * (@y + 1) %>
  .game-container {
      width: <%= w %>px;
      height: <%= h %>px;
  }

  .container {
      width: <%= w %>px;
      margin: 0 auto;
   }

